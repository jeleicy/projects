			$apellidos = $data["apellidos"];
			$email = $data["email"];
			$id_observador = $data["id_observador"];
			$tlfcel = $data["tlfcel"];
			$tlfhab = $data["tlfhab"];
			$tlfotro = $data["tlfotro"];
			$autorizado = $data["autorizado"];
			$privilegio = $data["privilegio"];
			$fecha_ing = $data["fecha_ing"];
			$centro = $data["centro"];
			$codigo = $data["codigo"];
			$id_operador = $data["id_operador"];
